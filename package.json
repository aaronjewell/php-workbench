{
  "name": "php-workbench",
  "displayName": "PHP Workbench",
  "description": "A dedicated workspace for PHP development and experimentation. Test PHP code snippets instantly within your project context with full access to Composer dependencies - no temporary files or terminal switching required.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.3"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "phpWorkbench.newScratchpad",
        "title": "PHP Workbench: New Scratchpad"
      },
      {
        "command": "phpWorkbench.executeCode",
        "title": "PHP Workbench: Execute Code"
      },
      {
        "command": "phpWorkbench.restartSession",
        "title": "PHP Workbench: Restart Session"
      }
    ],
    "keybindings": [
      {
        "command": "phpWorkbench.newScratchpad",
        "key": "ctrl+alt+n",
        "mac": "cmd+alt+n"
      },
      {
        "command": "phpWorkbench.executeCode",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && resourceLangId == php"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "PHP Workbench",
      "properties": {
        "phpWorkbench.useInteractiveMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable interactive REPL mode with persistent PHP session using PsySH"
        },
        "phpWorkbench.psyshPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to PsySH .phar file (leave empty to use bundled version)"
        },
        "phpWorkbench.sessionTimeout": {
          "type": "number",
          "default": 300000,
          "description": "Session timeout in milliseconds (300000 = 5 minutes)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run format && npm run compile && npm run build:phar",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run format && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build:phar": "php -dphar.readonly=0 bin/compile"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "vscode-jsonrpc": "^8.2.1"
  }
}
